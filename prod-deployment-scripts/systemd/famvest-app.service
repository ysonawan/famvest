[Unit]
Description=FamVest Application

After=network.target nginx.service postgresql.service
Requires=nginx.service postgresql.service

[Service]
Restart=always
RestartSec=5
User=root
WorkingDirectory=/opt/app/famvest-app
ExecStart=/usr/bin/java -jar /opt/app/famvest-app/famvest-app.jar
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
